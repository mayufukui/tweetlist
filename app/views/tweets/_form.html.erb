<%= form_with(model: tweet, local: true) do |f| %>
  <% if tweet.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% tweet.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <%= f.label :date, '日付' %>
  <%= f.text_field :date %>

  <%= f.label :content, 'ツイート' %>
  <%= f.text_field :content %>

  <%= f.submit '投稿' %>
<% end %>